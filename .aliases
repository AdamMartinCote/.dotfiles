# vim: set filetype=bash

# tree
for i in {1..6}; do
        alias t"${i}"="tree -L ${i}"
done

alias sys="systemctl "
alias reboot="systemctl reboot"
alias suspend="systemctl suspend"

alias j="jobs"
alias h="history"
alias pu="pushd"
alias po="popd"

# editor
alias e=${EDITOR}
alias vim=${EDITOR}
